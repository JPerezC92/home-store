{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env -- nest start --watch",
    "build": "nest build",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cross-env DATABASE_URL=:memory: vitest run --config ./vitest.config.e2e.ts",
    "test:excel": "ts-node scripts/test-excel-parser.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "db:reset": "dotenv -e .env -- node reset-db.js"
  },
  "dependencies": {
    "@libsql/client": "0.15.15",
    "@nestjs/common": "11.0.0",
    "@nestjs/core": "11.0.0",
    "@nestjs/platform-express": "11.0.0",
    "@nestjs/swagger": "11.2.1",
    "@repo/api": "workspace:*",
    "@repo/database": "workspace:*",
    "drizzle-orm": "0.44.7",
    "nestjs-zod": "5.0.1",
    "reflect-metadata": "0.2.0",
    "rxjs": "7.8.1",
    "xlsx": "0.18.5",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/express": "4.17.17",
    "@types/multer": "2.0.0",
    "@types/node": "22.15.3",
    "@types/supertest": "6.0.0",
    "@vitest/coverage-v8": "4.0.8",
    "@vitest/ui": "4.0.8",
    "cross-env": "10.1.0",
    "dotenv-cli": "11.0.0",
    "drizzle-kit": "0.31.6",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2",
    "unplugin-swc": "1.5.8",
    "vitest": "4.0.8",
    "vitest-mock-extended": "3.1.0"
  }
}
