{
	"name": "api",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"env:dev": "dotenv -e .env.development.local",
		"env:test": "dotenv -e .env.test.local",
		"dev": "pnpm env:dev -- nest start --watch",
		"build": "nest build",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"lint": "biome lint .",
		"prisma:dev": "pnpm env:dev -- prisma",
		"prisma:test": "pnpm env:test -- prisma"
	},
	"dependencies": {
		"@hs/api": "workspace:*",
		"@nestjs/common": "11.1.5",
		"@nestjs/core": "11.1.5",
		"@nestjs/platform-express": "11.1.5",
		"@prisma/client": "6.12.0",
		"exceljs": "4.4.0",
		"luxon": "3.7.1",
		"reflect-metadata": "0.2.2",
		"rxjs": "7.8.2",
		"zod": "4.0.5"
	},
	"devDependencies": {
		"@hs/jest-config": "workspace:*",
		"@hs/typescript-config": "workspace:*",
		"@jest/globals": "30.0.5",
		"@nestjs/cli": "11.0.7",
		"@nestjs/schematics": "11.0.5",
		"@nestjs/swagger": "11.2.0",
		"@nestjs/testing": "11.1.5",
		"@types/express": "5.0.3",
		"@types/luxon": "3.7.1",
		"@types/node": "24.0.15",
		"@types/supertest": "6.0.3",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.2",
		"jest": "30.0.5",
		"prisma": "6.12.0",
		"source-map-support": "0.5.21",
		"supertest": "7.1.3",
		"ts-jest": "29.4.0",
		"ts-loader": "9.5.2",
		"ts-node": "10.9.2",
		"tsconfig-paths": "4.2.0",
		"typescript": "5.5.4"
	}
}
