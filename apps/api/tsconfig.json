{
	"extends": "@hs/typescript-config/nestjs.json",
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {
			"#payment/*": ["./src/payment/*"],
			"#database/*": ["./src/database/*"],
			"#shared/*": ["./src/shared/*"]
		}
	}
}
